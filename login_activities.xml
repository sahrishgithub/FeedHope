<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/joinusstyle"
    android:layout_marginTop="-10dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/joinus"
        />

    <Button
        android:id="@+id/adminLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:text="Admin Login"
        android:textSize="19dp"
        />

    <Button
        android:id="@+id/providerLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:text="Provider Login"
        android:textSize="19dp"
        />

    <Button
        android:id="@+id/riderLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:text="Rider Login"
        android:textSize="19dp"
        />

    <Button
        android:id="@+id/receiverLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:text="Receiver Login"
        android:textSize="19dp"
        />
</RelativeLayout>