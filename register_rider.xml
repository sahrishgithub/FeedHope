<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FeedHope"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/name"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:maxLength="30"
        android:hint="Name"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:hint="Phone"
        android:inputType="phone"
        android:paddingLeft="12dp" />

    <EditText
        android:id="@+id/licence"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/id_number"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:hint="License Number"
        android:inputType="textPhonetic"
        android:maxLength="15"
        />

    <Spinner
        android:id="@+id/hours"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:entries="@array/Working_Hours"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/days"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:entries="@array/days"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/card"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/card"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:maxLength="16"
        android:hint="Add Credit or Debit Card Detail"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/email"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/pass"
        android:drawableEnd="@drawable/close_eye"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="12dp"
        android:maxLength="8"
        android:hint="Password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:text="Register"
        android:textSize="19dp"
        />

</RelativeLayout>