<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FeedHope"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/name"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:maxLength="30"
        android:hint="Name"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:hint="Phone"
        android:inputType="phone"
        android:paddingLeft="12dp" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:entries="@array/ID_Type"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/number"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/id_number"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:hint="ID Card Number"
        android:inputType="number"
        android:maxLength="12"
        />

    <Spinner
        android:id="@+id/hours"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:entries="@array/Working_Hours"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/days"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:entries="@array/days"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/card"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/card"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:maxLength="16"
        android:hint="Add Credit or Debit Card Detail"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/email"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="textEmailAddress"

        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/pass"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="540dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="12dp"
        android:maxLength="8"
        android:hint="Password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:text="Register"
        android:textSize="19dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="660dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="Already have an account ?"
            android:textAlignment="center"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Log In"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="19dp" />

    </LinearLayout>
</RelativeLayout>