<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FeedHope"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/provide_food"
        />

    <EditText
        android:id="@+id/food"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/food1"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:maxLength="30"
        android:hint="Type of food"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/quantity"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:maxLength="30"
        android:hint="Quantity"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/storage"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/storage"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:maxLength="500"
        android:hint="Storage Requirement"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/available"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="420dp"
        android:drawableLeft="@drawable/expiry"
        android:layout_centerHorizontal="true"
        android:hint="Availability Date"
        android:inputType="datetime"
        />

    <EditText
        android:id="@+id/expire"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/expiry"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        android:hint="Expiration Date"
        android:inputType="datetime"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:text="Register"
        android:textSize="19dp"
        />
    
</RelativeLayout>