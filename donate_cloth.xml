<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FeedHope"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Cloth Donation"
        android:textSize="20dp"
        android:textColor="@color/button_color"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/type"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:entries="@array/cloth_type"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/condition"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:entries="@array/condition"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/quantity"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:maxLength="30"
        android:hint="Quantity"
        android:inputType="numberDecimal"
        />

    <Spinner
        android:id="@+id/category"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:entries="@array/cloth_category"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:gravity="center"
        android:hint="Seasonal Clothes"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic" />

    <RadioGroup
        android:id="@+id/radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="440dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Winter "
            android:textSize="18dp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Summer "
            android:textSize="18dp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" All Season "
            android:textSize="18dp"
            android:textStyle="italic" />
    </RadioGroup>

    <Spinner
        android:id="@+id/size"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:entries="@array/cloth_size"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:text="Register"
        android:textSize="19dp"
        />

</RelativeLayout>