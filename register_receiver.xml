<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FeedHope"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/reference"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/refrence"
        android:drawablePadding="10dp"
        android:hint="Organization Reference"
        android:inputType="text"
        android:maxLength="30"
        android:paddingLeft="12dp" />

    <EditText
        android:id="@+id/type"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:drawableLeft="@drawable/type"
        android:drawablePadding="10dp"
        android:hint="Organization type"
        android:inputType="text"
        android:maxLength="30"
        android:paddingLeft="12dp" />

    <EditText
        android:id="@+id/member"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:drawableLeft="@drawable/member"
        android:drawablePadding="10dp"
        android:hint="No.of. Member"
        android:inputType="number"
        android:maxLength="3"
        android:paddingLeft="12dp" />

    <EditText
        android:id="@+id/requirement"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:drawableLeft="@drawable/requirement"
        android:drawablePadding="10dp"
        android:hint="Food Requirement"
        android:inputType="text"
        android:paddingLeft="12dp" />

    <TextView
        android:id="@+id/frequency"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:gravity="center"
        android:hint="Frequency of Need"
        android:inputType="none"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic" />

    <RadioGroup
        android:id="@+id/radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="340dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Daily "
            android:textSize="18dp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Weekly "
            android:textSize="18dp"
            android:textStyle="italic" />
    </RadioGroup>

    <EditText
        android:id="@+id/time"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:drawableLeft="@drawable/delivery_time"
        android:drawablePadding="10dp"
        android:hint="Preferred Delivery Time"
        android:inputType="time"
        android:paddingLeft="12dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="12dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="12dp"

        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="8"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"
        android:background="@drawable/button"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="19dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="670dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="Already have an account ?"
            android:textAlignment="center"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Log In"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>