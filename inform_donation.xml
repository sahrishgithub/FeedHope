<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FeedHope"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:background="@drawable/receiverdetail"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:drawableLeft="@drawable/refrence"
        android:drawablePadding="10dp"
        android:hint="Organization Name"
        android:inputType="text"
        android:maxLength="30"
        android:paddingLeft="12dp" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:drawableLeft="@drawable/quantity"
        android:drawablePadding="10dp"
        android:hint="Quantity"
        android:inputType="number"
        android:paddingLeft="12dp" />

    <Spinner
        android:id="@+id/storage"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:entries="@array/storage"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
    android:id="@+id/expire"
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:drawableLeft="@drawable/expiry"
    android:paddingLeft="12dp"
    android:drawablePadding="10dp"
    android:layout_marginTop="460dp"
    android:layout_centerHorizontal="true"
    android:hint="Expiration Date"
    android:inputType="datetime"
    android:focusable="false"
    android:clickable="true"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:background="@drawable/button"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="19dp" />

</RelativeLayout>