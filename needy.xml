<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Provider">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo1"
        />

    <EditText
        android:id="@+id/member"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/round_text"
        android:drawableLeft="@drawable/member"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:maxLength="3"
        android:hint="No.of. Member"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/refrence"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/round_text"
        android:drawableLeft="@drawable/refrence"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"
        android:maxLength="30"
        android:hint="Organization Reference"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/type"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/round_text"
        android:drawableLeft="@drawable/type"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:maxLength="30"
        android:hint="Organization type"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/requirement"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/round_text"
        android:drawableLeft="@drawable/requirement"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:hint="Food Requirement"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/frequency"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:hint="Frequency of Need"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="20dp"
        android:inputType="none"
        />
    <RadioGroup
        android:id="@+id/radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Daily "
            android:textStyle="italic"
            android:textSize="18dp"
            />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Weekly "
            android:textStyle="italic"
            android:textSize="18dp"
            />

    </RadioGroup>
    <EditText
        android:id="@+id/time"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/round_text"
        android:drawableLeft="@drawable/delivery_time"
        android:paddingLeft="12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        android:hint="Preferred Delivery Time"
        android:inputType="time"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"
        android:text="Register"
        android:textSize="19dp"
        />
</RelativeLayout>