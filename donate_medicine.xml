<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_color" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FeedHope"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/medicin"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:hint="Medicine Name"
        android:inputType="text"
        />

    <Spinner
        android:id="@+id/form"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:entries="@array/medicine_form"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="410dp"
        android:layout_centerHorizontal="true"
        android:hint="Pair Quantity"
        android:inputType="numberDecimal"
        />

    <Spinner
        android:id="@+id/condition"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:entries="@array/medicine_condition"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/manufacture"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="520dp"
        android:layout_centerHorizontal="true"
        android:hint="Manufacturing Date"
        android:inputType="datetime"
        android:focusable="false"
        android:clickable="true"/>

    <EditText
        android:id="@+id/expire"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="570dp"
        android:layout_centerHorizontal="true"
        android:hint="Expiry Date"
        android:inputType="datetime"
        android:focusable="false"
        android:clickable="true"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/expire"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Your current location is:"
        android:textSize="16sp" />

    <Button
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/location"
        android:text="Register"
        android:textSize="19dp"
        />

</RelativeLayout>